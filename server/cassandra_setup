CREATE KEYSPACE surespot
WITH REPLICATION = {'class' : 'SimpleStrategy', 'replication_factor': 3};

CONSISTENCY QUORUM;

USE surespot;

CREATE TABLE chatmessages (
  username    varchar,
  spotname    varchar,
  id          varint,
  iv          varchar,
  fromuser        varchar,
  fromversion varchar,
  touser          varchar,
  toversion   varchar,
  datetime    timestamp,
  data        varchar,
  mimetype    varchar,
  datasize    int,
  shareable   boolean,
  PRIMARY KEY (username, spotname, id)
)
WITH  caching = 'rows_only';

CREATE TABLE messagecontrolmessages (
  username  varchar,
  spotname  varchar,
  id        varint,
  type      varchar,
  action    varchar,
  data      varchar,
  moredata  varchar,
  fromuser  varchar,
  PRIMARY KEY (username, spotname, id)
)
WITH  caching = 'rows_only';

CREATE TABLE usercontrolmessages (
  username  varchar,
  id        varint,
  type      varchar,
  action    varchar,
  data      varchar,
  moredata  varchar,
  PRIMARY KEY (username, id)
)
WITH  caching = 'rows_only';

CREATE TABLE publickeys (
    username  varchar,
    version   varint,
    dhpub     varchar,
    dhpubsig  varchar,
    dsapub    varchar,
    dsapubsig varchar,

    PRIMARY KEY (username, version));